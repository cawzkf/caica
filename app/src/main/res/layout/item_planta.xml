<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="220dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    android:background="@color/bege_claro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/verde_claro"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imagem_planta"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/verde_escuro"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/nome_planta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Planta"
            android:textSize="14sp"
            android:textColor="@color/preto"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nome_cientifico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome CientÃ­fico"
            android:textSize="12sp"
            android:textColor="@color/verde_medio"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
