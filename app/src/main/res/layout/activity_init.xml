<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_app"
    tools:context=".initActivity">

    <TextView
        android:id="@+id/texto_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caiçá"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/preto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/texto_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plantas Medicinais"
        android:textSize="16sp"
        android:textColor="@color/verde_medio"
        app:layout_constraintTop_toBottomOf="@id/texto_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/icone_planta"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/amarelo_flor"
        app:layout_constraintTop_toBottomOf="@id/texto_subtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/botao_escanear"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Escanear Planta"
        android:textColor="@color/branco"
        android:textSize="18sp"
        android:backgroundTint="@color/verde_escuro"
        app:layout_constraintTop_toBottomOf="@id/icone_planta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/botao_catalogo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Catálogo"
        android:textColor="@color/branco"
        android:textSize="16sp"
        android:backgroundTint="@color/verde_escuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botao_escanear"/>

</androidx.constraintlayout.widget.ConstraintLayout>
